<mvc:View
	controllerName="zjblesson02.WorklistShoes.controller.Worklist"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:semantic="sap.f.semantic"
	xmlns:smartTable="sap.ui.comp.smarttable"
	xmlns:smartFilterBar="sap.ui.comp.smartfilterbar"
>

	<semantic:SemanticPage
		id="page"
		headerPinnable="false"
		toggleHeaderOnTitleClick="false">

		<semantic:titleHeading>
			<Title text="{i18n>worklistTitle}" />
		</semantic:titleHeading>
		<semantic:headerContent>
			<smartFilterBar:SmartFilterBar
				id = "smartFilterBar"
				entitySet = "zjblessons_base_Materials"
				useVariantManagement = "true"
				persistencyKey = "pk_MaterialsSF"
				liveMode = "false"
				enableBasicSearch = "false"
				useToolBar = "true"
			>
			</smartFilterBar:SmartFilterBar>
		</semantic:headerContent>

		<semantic:content>
			<smartTable:SmartTable 
				id = "smartTable"
				entitySet = "zjblessons_base_Materials"
				tableType = "ResponsiveTable"
				smartFilterId = "smartFilterBar"
				editable = "false"
				useExportToExcel = "true"
				editTogglable = "false"
				useVariantManagement = "true"
				persistencyKey = "pk_MaterialsST"
				useTablePersonalisation = "true"
				header = "Materials"
				showRowCount = "true"
				enableAutoBinding = "true"
				showFullScreenButton = "true"
			>
				<smartTable:customToolbar>
					<OverflowToolbar design = "Transparent">
						<ToolbarSpacer/>
						<Button 
							text="Create"	
							press="onPressCreate"
							icon = "sap-icon://add"
						/>
						<Button 
							text="Edit" 
							press="onPressEdit"
							icon = "sap-icon://edit"
						/>
						<Button 
							text="Delete" 
							press="onPressDelete"
							icon = "sap-icon://delete"
						/>
						<Button 
							text = "Refresh" 
							icon = "sap-icon://refresh"
							press = "onPressRefresh"
						/>
						<SearchField
							id="searchFieldSubGroupText"
							placeholder="{i18n>SearchForSubGroupText}"
							tooltip="{i18n>worklistSearchTooltip}"
							search="onSearchSubGroupText"
							width="20%">
						</SearchField>
						<!--<SearchField-->
						<!--id="searchFieldMaterialText"-->
						<!--	placeholder="{i18n>SearchForMaterialText}"-->
						<!--	tooltip="{i18n>worklistSearchTooltip}"-->
						<!--	search="onSearchMaterialText"-->
						<!--	width="20%">-->
						<!--</SearchField>-->
					</OverflowToolbar>
				</smartTable:customToolbar>
				<Table
					id="table"
					width="auto"
					noDataText="{worklistView>/tableNoDataText}"
					busyIndicatorDelay="{worklistView>/tableBusyDelay}"
					growing="true"
					growingScrollToLoad="true"
					updateFinished="onUpdateFinished"
					mode="SingleSelectLeft">
	
					<columns>
					</columns>
	
					<items>
						<ColumnListItem
							type="Navigation"
							press="onPress"
						>
						</ColumnListItem>
					</items>
				</Table>
			</smartTable:SmartTable>
		</semantic:content>

		<semantic:sendEmailAction>
			<semantic:SendEmailAction id="shareEmail" press="onShareEmailPress"/>
		</semantic:sendEmailAction>


	</semantic:SemanticPage>

</mvc:View>